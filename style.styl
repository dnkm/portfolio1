*
  margin 0
  padding 0
body
  background linear-gradient(90deg, #2E1B39 10%, #2B435F 40%, #2E1B39)
  font-size 14px
  font-family: 'Noto Sans', serif;
.section
  padding 40px 10%
.section1
  color white
  text-align right
  span
    font-size 20px
    margin-left 20px
.section2
  background #EDE3D7
  h1
    margin 20px 0 10px 0
    font-size 40px
    font-weight bold
    letter-spacing 3px
  .col-3
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-gap 50px
  img
    width 100%
    border-radius 10px
    box-shadow 1px 1px 5px #bbb
  p
    font-size 20px
    span
      font-size 24px
      font-weight bolder
  .links
    display flex
    flex-direction column
    justify-content space-between
    > div
      flex-grow 1
      border-radius 10px
      box-shadow 1px 1px 5px #bbb
      margin-bottom 20%
      &:last-child
        margin-bottom 0
